<?xml version='1.0' encoding='utf-8'?>
<widget id="com.paymeal" version="1.5" versionCode="1.5" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PayMeal</name>
    <description>
        PayMeal
    </description>
    <author email="pivotdesignmedia@gmail.com" href="http://paymeal.app">
        paymeal.app
    </author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-geolocation" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm" />
    <gap:plugin name="phonegap-plugin-push" source="npm" spec="2.1.2" />
    <gap:plugin source="git" spec="https://github.com/bastikikang/cordova-plugin-request-location-accuracy">
        <variable name="PLAY_SERVICES_VERSION" value="11.0.1" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-x-toast" source="npm" spec="2.7.0" />
    <gap:plugin name="cordova-plugin-media" source="npm" spec="5.0.2" />
    <gap:plugin name="cordova.plugins.diagnostic" source="npm" spec="5.0.1" />
    <gap:plugin name="cordova-plugin-buildinfo" source="npm" spec="2.0.1" />
    <gap:plugin name="cordova-plugin-camera" source="npm" spec="2.4.1" />
    <gap:plugin name="cordova-plugin-file-transfer" source="npm" spec="1.7.1" />
    <gap:plugin name="cordova-plugin-googleplus" source="npm" spec="7.0.2">
        <variable name="REVERSED_CLIENT_ID" value="" />
        <variable name="PLAY_SERVICES_VERSION" value="11.0.1" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-facebook4" source="npm" spec="5.0.0">
        <variable name="APP_ID" value="2716575325030499" />
        <variable name="APP_NAME" value="PayMeal" />
    </gap:plugin>
    <gap:plugin name="com-sarriaroman-photoviewer" source="npm" />
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" spec="5.4.6">
        <variable name="PHOTO_LIBRARY_USAGE_DESCRIPTION" value="PayMeal will use your photo library" />
        <variable name="PHOTO_LIBRARY_ADD_USAGE_DESCRIPTION" value="PayMeal saves images of your photo library" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-ionic-webview" source="npm" spec="4.2.1" />
    <gap:plugin name="cordova-plugin-ionic-keyboard" source="npm" spec="2.2.0" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <gap:config-file parent="/manifest" platform="android">
        <supports-screens android:largeScreens="true" android:smallScreens="true" android:xlargeScreens="true" />
        <application android:theme="@android:style/Theme.NoTitleBar">
        </application>
    </gap:config-file>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Enable PayMeal to access your camera to take photos of you and to save as profile picture.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Enable PayMeal to access your photo library to get pictures from there.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>This allows us to use your location to find restaurant nearby.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
        <string>This allows us to use your location to provide you a nearby restaurant, and to facilitate more accurately, keeping you in the loop about PayMeal.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
        <string>This allows us to use your location to find restaurant nearby.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
        <string>Enable PayMeal to access your photo library to save pictures there.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSMicrophoneUsageDescription">
        <string>PayMeal need microphone access to record sounds</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSBluetoothAlwaysUsageDescription">
        <string>This allows us to facilitate more restaurant</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSBluetoothPeripheralUsageDescription">
        <string>Improve location accuracy when finding nearby restaurant</string>
    </edit-config>
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="fullscreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
